@using Kentico.Content.Web.Mvc
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Inter:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet">
    <link href="~/Content/css/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/animate.css" rel="stylesheet">
    <link href="~/Content/css/custom.css" rel="stylesheet">
    <link href="~/Content/css/responsive.css" rel="stylesheet">

    @Styles.Render("~/Content/css/custom.css")
    @RenderSection("styles", required: false)

</head>

<body>


    <header class="main_header" role="banner">
        <div class="top_header">
            <div class="container">
                <div class="top_header_cont">
                    <div class="top_menu">
                        <ul class="top_inner_menu">
                            <li> <a href="#">Calendar </a> </li>
                            <li> <a href="/News"> News</a> </li>
                            <li> <a href="#">Childcare Financial Assistance </a> </li>
                        </ul>
                        <div class="select_language">
                            <select class="form_control">
                                <option>Translate</option>
                                <option>English</option>
                                <option>Spain</option>
                            </select>
                        </div>
                        <div class="top_search">
                            <img src="~/Content/img/search.png" style="max-height: 35px;width: 180px;" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-xl" aria-label="Top Navigation">
            <div class="container">
                <div class="head_wrap">
                    <div class="logo_wrap">
                        <a class="navbar-brand" href="/home">
                            <img src="~/Content/img/logo.svg" alt=" Logo">
                        </a>
                    </div>

                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        <nav class="nav_bottom" aria-label="Main Navigation">
                            <ul class="navbar-nav ">
                                @Html.Action("GetMenu", "Menu")
                            </ul>
                        </nav>
                    </div>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icon-bar top"></span>
                    <span class="icon-bar midlde"></span>
                    <span class="icon-bar last"></span>
                </button>
            </div>
        </nav>

    </header>
    @RenderBody()

    <footer class="footer ">
        <div class="container">
            <div class="row footer_row align-items-start">
                <div class="col-md-4  foot_col ">
                    <div class="footer-logo">
                        <a href="#">
                            <img src="~/content/img/footer-logo.svg" alt="GCWS Logo" height="">
                        </a>
                    </div>
                    <ul class="footer-social d-flex list-unstyled mb-0">
                        <li>
                            <a href="#" class="footer-social-icon"><img src="~/content/img/facebook.svg" alt="Facebook"></a>
                        </li>
                        <li>
                            <a href="#" class="footer-social-icon"><img src="~/content/img/TwitterX.svg" alt="Twitter"></a>
                        </li>
                        <li>
                            <a href="#" class="footer-social-icon"><img src="~/content/img/instagram.svg" alt="Instagram"></a>
                        </li>
                        <li>
                            <a href="#" class="footer-social-icon"><img src="~/content/img/youtube.svg" alt="YouTube"></a>
                        </li>
                        <li>
                            <a href="#" class="footer-social-icon"><img src="~/content/img/Linked.svg" alt="LinkedIn"></a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4 foot_col ">
                    <h2 class="">Contact Us</h2>
                    <div class="footer-contact">
                        <span class="footer-icon mr-2"><img src="~/content/img/call.svg" alt="Phone"></span>
                        <div class="con_info">
                            <strong>Phone:</strong>
                            <p>
                                <a href="#">713-627-3200</a>
                            </p>
                        </div>
                    </div>
                    <div class="footer-contact">
                        <span class="footer-icon mr-2"><img src="~/content/img/location_on.svg" alt="location"></span>
                        <div class="con_info">
                            <strong>Office: </strong>
                            <p>
                                <a href="#">3555 Timmons Lane, Houston, TX 77027.</a>
                            </p>
                        </div>
                    </div>
                    <div class="footer-contact">
                        <span class="footer-icon mr-2"><img src="~/content/img/drafts.svg" alt="drafts"></span>
                        <div class="con_info">
                            <strong>Mailing Address: </strong>
                            <p>
                                Workforce Solutions <br>Houston-Galveston Area Council <br>P.O. Box 22777 Houston, TX 77227-2777
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 foot_col">
                    <h2>Explore</h2>
                    <ul class="footer-links list-unstyled mb-0">
                        <li><a href="#" class="">Contact Us</a></li>
                        <li><a href="#" class="">Partner With Us</a></li>
                        <li><a href="#" class="">How to Become a Vendor</a></li>
                        <li><a href="#" class="">How to Become a Partner</a></li>
                        <li><a href="#" class="">Request Letters of Support for External Grants</a></li>
                        <li><a href="#" class="">Copyright & Legal</a></li>
                    </ul>
                </div>
            </div>
            <hr class="footer-divider" style="border-color: rgba(255,255,255,0.6);">
            <div class="row">
                <div class="col-12 text-center">
                    <small class="footer-copyright text-white">
                        ©www.wrksolutions.com. All Rights Reserved<br>
                        Workforce Solutions is an Equal Opportunity Employer/Program. Auxiliary Aids and Services are available upon request to individuals with disabilities. (Please request reasonable accommodations a minimum of two business days in advance.) Relay Texas: 1-800-735-2989 (TDD) and 1-800-735-2988 (Voice) or 711
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Content/js/jquery.js "></script>
    <script src="~/Content/js/popper.js "></script>
    <script src="~/Content/js/bootstrap.js "></script>
    <script src="~/Content/js/expand.js "></script>
    <script src="~/Content/js/owl.carousel.min.js "></script>
    <script src="~/Content/js/custom.js "></script>

    @RenderSection("scripts", required: false)
</body>

</html>